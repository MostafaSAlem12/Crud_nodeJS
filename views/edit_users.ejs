<%- include('layouts/header') %>
<div class="container ">
    <div class="row ">
      <div class="col-lg-6 mx-auto mt-4">
        <div class="card shadow">
          <div class="card-header bg-success">
            <h3 class="card-title text-center">Edit user : (<%= user.name %>)</h3>
            </div>
            <div class="card-body p-4">
            <form action="/update/<%= user._id %>" method="POST" id="add-form" enctype="multipart/form-data">
              <div class="mb-3">
                <label for="name" class="form-label">Name</label>
                <input type="text" placeholder="Enter name" class="form-control" value="<%= user.name %>" id="name" name="name" required>
              </div>
              <div class="mb-3">
                <label for="email" class="form-label">Email address</label>
                <input type="email" class="form-control" placeholder="Enter email" value="<%= user.email %>" id="email" name="email" required>
              </div>
               <div class="mb-3">
                <label for="phone" class="form-label">Phone number</label>
                <input type="tel" class="form-control form-control-lg" placeholder="Enter phone" value="<%= user.phone %>" id="phone" name="phone" required>
              </div>
              <div class="mb-3">
                <label for="image" class="form-label">select image</label>
                <input type="hidden" class="form-control form-control-lg"  name="old_image" />
                <img src="/<%= user.image %>" width="100" class="img-thumbnail mt-1" />
              </div>
              <input type="hidden" name="old_image" value="<%= user.image %>"  />
              <div class="mb-3 d-grid">
                <input type="submit"  name="submit" value="Update user" class="btn btn-success btn-lg" />
              </div>      
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
<%- include('layouts/footer') %>